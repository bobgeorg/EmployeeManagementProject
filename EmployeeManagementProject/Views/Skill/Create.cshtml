@model EmployeeManagementProject.Models.Skill

@{
    ViewBag.Title = "Create";
}

<h2>Add skill</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Please provide the information required to create a new skill</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="control-label col-md-2">Skill Name</div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Skill_Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Skill_Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class= "control-label col-md-2">Skill Description</div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Skill_Description, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Skill_Description, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class = "control-label col-md-2">Skill Creation Date</div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Skill_Creation_Date, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Skill_Creation_Date, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<link href="~/Content/themes/base/core.css" rel="stylesheet" />
<link href="~/Content/themes/base/datepicker.css" rel="stylesheet" />
<link href="~/Content/themes/base/theme.css" rel="stylesheet" />
<link type='text/css' rel='stylesheet' href="https://cdnjs.cloudflare.com/ajax/libs/jquery-ui-timepicker-addon/1.6.3/jquery-ui-timepicker-addon.min.css" />

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jqueryui")
    @Styles.Render("~/Content/cssjqryUi")
    @Scripts.Render("https://cdnjs.cloudflare.com/ajax/libs/jquery-ui-timepicker-addon/1.6.3/jquery-ui-timepicker-addon.min.js")

    
   <script type="text/javascript">

     $(document).ready(function () {
         $('input[type=datetime]').datetimepicker({
             dateFormat: "dd M,yy",
             changeMonth: true,
             changeYear: true,
             defaultDate: new Date(),
             timeFormat: 'hh:mm tt',
             showTimePicker: false,
             showSecond:false,
             showMillisec:false,
             showMicrosec:false,
             showTimezone:false
         });

     });</script> 
}
