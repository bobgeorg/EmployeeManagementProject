@model EmployeeManagementProject.Models.Skill

@{
    ViewBag.Title = "Skill Details";
}

<h2>Skill details</h2>

<div>
    <h4>View, update or delete existing skills</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Name:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Skill_Name)
        </dd>

        <dt>
            Description:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Skill_Description)
        </dd>

        <dt>
            Creation Date:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Skill_Creation_Date)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Update", "Edit", new { id = Model.Skill_id }) |
    @Html.ActionLink("Delete", "Delete", new { id = Model.Skill_id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
